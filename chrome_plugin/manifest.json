{
  "description": "Demonstrating webRequests",
  "manifest_version": 2,
  "name": "webRequest-demo",
  "version": "1.0",
  "browser_action": {
    "default_icon": "128-disabled.png",
    "default_title": "Avgle Helper Menu",
    "default_popup": "popup.html"
  },
  "permissions": [
    "debugger",
     "webRequest", 
     "downloads",
     "*://*/*"
    ],

  "background": {
    "scripts": [
      "background/libs/ajax.js",
      "hot-reload.js",
      "background/background.js"
    ]
  }
}
